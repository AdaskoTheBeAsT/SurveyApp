{
  "name": "client-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "build": "yarn run env && ng build --extra-webpack-config webpack.extra.js",
    "prod": "yarn run env && ng build --prod --extra-webpack-config webpack.extra.js",
    "start": "yarn run env && ng serve --aot --proxy-config proxy.conf.js",
    "lint": "ng lint && stylelint \"src/**/*.scss\" --syntax scss && htmlhint \"src\" --config .htmlhintrc",
    "lint2": "ng lint ClientApp ClientApp-e2e --format codeFrame --fix && stylelint \"src/**/*.scss\" --syntax scss && htmlhint \"src\" --config .htmlhintrc",
    "stats": "yarn run env && ng build --stats-json --extra-webpack-config webpack.extra.js",
    "stats-prod": "yarn run env && ng build --prod --stats-json --extra-webpack-config webpack.extra.js",
    "stats-report": "webpack-bundle-analyzer ../wwwroot/stats.json",
    "test": "yarn run env && jest --watch",
    "test:ci": "yarn run env && yarn run lint && jest --runInBand --coverage",
    "e2e": "yarn run env && testcafe chrome e2e/**/*.e2e-spec.ts --app \"yarn start\" --app-init-delay 40000 --proxy-bypass http://localhost:4200/",
    "e2e:remote": "yarn run env && cross-env BASE_URL=%E2E_URL% USERNAME=%USERNAME% PASSWORD=%PASSWORD% testcafe chrome e2e/**/*.e2e-spec.ts --hostname localhost --proxy-bypass %E2E_URL% --reporter spec,xunit:../../../Cake/.artifacts/frontend-e2e-xunit-report.xml,nunit:../../../Cake/.artifacts/frontend-e2e-nunit-report.xml,html:../../../Cake/.artifacts/frontend-e2e-nunit-report.html",
    "translations:extract": "ngx-translate-extract --input ./src --output ./src/translations/template.json --format=json --clean -sort --marker extract",
    "docs": "hads ./docs -o",
    "env": "ngx-scripts env npm_package_version",
    "prettier": "prettier --write \"./{src,e2e}/**/*.{ts,js,tsx,json,md,scss,css,less}\"",
    "prettier:check": "prettier --list-different \"./{src,e2e}/**/*.{ts,js,tsx,json,md,scss,css,less}\"",
    "postinstall": "yarn run prettier",
    "precommit": "pretty-quick --staged",
    "generate": "ng generate",
    "style": "yarn prettier && yarn lint",
    "verify": "yarn prettier -l && yarn lint && jest --bail",
    "ts-lint-console": "tslint --project tsconfig.json --config tslint.json --force src/**/*.ts",
    "ts-lint": "tslint --project tsconfig.json --config tslint.json  -o ../../../Cake/.artifacts/tslint-result.json -t json --force 'src/**/*.ts'",
    "create-icon-sprite": "svg2sprite ./src/assets/svg ./src/assets/sprites/sprites.svg --stripAttrs id --stripTags title"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,e2e}/**/*.{js,jsx,ts,tsx},!src/app/api/**": [
      "yarn lint",
      "git add"
    ],
    "{src,e2e}/**/*.{js,jsx,ts,tsx,css,scss,md},!src/app/api/**": [
      "prettier --write",
      "git add"
    ]
  },
  "jestSonar": {
    "reportPath": "../../../Cake/.artifacts",
    "reportFile": "frontend-test-report.xml",
    "indent": 4
  },
  "dependencies": {
    "@angular/animations": "^7.2.4",
    "@angular/common": "^7.2.4",
    "@angular/compiler": "^7.2.4",
    "@angular/core": "^7.2.4",
    "@angular/forms": "^7.2.4",
    "@angular/http": "^7.2.4",
    "@angular/platform-browser": "^7.2.4",
    "@angular/platform-browser-dynamic": "^7.2.4",
    "@angular/router": "^7.2.4",
    "@fortawesome/fontawesome-free-webfonts": "^1.0.9",
    "@ng-bootstrap/ng-bootstrap": "^4.0.2",
    "@ngx-translate/core": "^11.0.1",
    "@ngxs/store": "^3.3.4",
    "bootstrap": "^4.2.1",
    "bootswatch": "^4.2.1",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.6.4",
    "lodash": "^4.17.11",
    "moment-timezone": "^0.5.23",
    "momentjs": "^2.0.0",
    "ng-svg-icon-sprite": "^1.5.0",
    "ngx-moment": "^3.3.0",
    "primeicons": "^1.0.0",
    "primeng": "^7.0.5",
    "rxjs": "^6.4.0",
    "rxjs-compat": "^6.4.0",
    "svg4everybody": "^2.1.9",
    "tslib": "^1.9.3",
    "windows-iana": "^2.0.1",
    "zone.js": "^0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.1",
    "@angular/cdk": "^7.3.1",
    "@angular/cli": "~7.3.1",
    "@angular/compiler-cli": "^7.2.4",
    "@angular/language-service": "^7.2.4",
    "@biesbjerg/ngx-translate-extract": "^2.3.4",
    "@ngx-rocket/scripts": "^3.0.1",
    "@ngxs/devtools-plugin": "^3.3.4",
    "@ngxs/logger-plugin": "^3.3.4",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.120",
    "@types/node": "^10.12.24",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.1.0",
    "codelyzer": "^4.5.0",
    "hads": "^1.7.1",
    "htmlhint": "^0.10.1",
    "https-proxy-agent": "^2.2.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-preset-angular": "^6.0.2",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^8.1.3",
    "ng-mocks": "^7.5.0",
    "ngx-build-plus": "^7.7.5",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "puppeteer": "^1.12.2",
    "stylelint": "~9.10.1",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended-scss": "~3.2.0",
    "stylelint-config-standard": "~18.2.0",
    "stylelint-scss": "~3.5.3",
    "svg2sprite-cli": "^2.0.1",
    "testcafe": "^1.0.0",
    "testcafe-angular-selectors": "^0.3.2",
    "testcafe-reporter-html": "^1.4.4",
    "testcafe-reporter-nunit": "^0.1.2",
    "testcafe-reporter-xunit": "^2.1.0",
    "ts-node": "~8.0.2",
    "tslint": "~5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "~3.2.4",
    "webpack-bundle-analyzer": "^3.0.3"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always",
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "bracketSpacing": true,
    "overrides": [{
      "files": "*.scss",
      "options": {
        "singleQuote": false
      }
    }]
  }
}
